{% block stylesheets %}
    <style>
        th {
            text-align: left;
            width: 100;
        }
        td {
            text-align: right;
            width: 120;
        }
    </style>
{% endblock %}
{% block body %}
    <h1>BRM Sale</h1>
    <table border="1" spacing="3">
        <tbody>
            <tr>
                <th scope="col">Id</th>
                <td>{{ sale.id }}</td>
            </tr>
            <tr>
                <th>Lot</th>
                <td>{{ sale.product.lot }}</td>
            </tr>
            <tr>
                <th>Product</th>
                <td>{{ sale.product.productType.name }}</td>
            </tr>            
            <tr>
                <th>Quantity</th>
                <td>{{ sale.quantity }}</td>
            </tr>
            <tr>
                <th>Unit Price</th>
                <td>{{ sale.product.price }}</td>
            </tr>
            <tr>
                <th>Total Price</th>
                <td>{{ sale.product.price * sale.quantity }}</td>
            </tr>  
            <tr>
                <th>Cancelled</th>
                <td>{{ sale.cancelled ? 'Yes' : 'No' }}</td>
            </tr>          
        </tbody>
    </table>
{% endblock %}
